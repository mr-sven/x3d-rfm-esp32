{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Esp32 GDB",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/out/Esp32/esp32/debug/build/app.out",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "${env:IDF_TOOLS_PATH}/tools/xtensa-esp32-elf/esp-2021r1-8.4.0/xtensa-esp32-elf/bin/xtensa-esp32-elf-gdb",
            "miDebuggerServerAddress": "/dev/ttyUSB0",
            "miDebuggerArgs": "-x ${env:SMING_HOME}/Arch/Esp32/Components/gdbstub/gdbcmds -b 115200"
        }
    ]
}